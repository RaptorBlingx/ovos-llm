# ============================================================================
# OVOS EnMS Skill - Environment Variables
# ============================================================================
# Copy this file to .env and customize for your environment
# These values override config.yaml settings
# ============================================================================

# EnMS API Configuration
# Default: 10.33.10.104 (current server)
# Change this to your EnMS server IP
ENMS_API_HOST=10.33.10.104
ENMS_API_PORT=8001
ENMS_API_URL=http://${ENMS_API_HOST}:${ENMS_API_PORT}/api/v1

# Docker Network (for containerized OVOS)
# Default: 172.18.0.1 (Docker host from container perspective)
# Use this when OVOS runs in Docker and EnMS on host
# ENMS_API_URL=http://172.18.0.1:8001/api/v1

# Alternative: Use service name when both in same Docker network
# ENMS_API_URL=http://enms-analytics:8001/api/v1

# Timeouts
ENMS_API_TIMEOUT=90

# OVOS REST Bridge (if using bridge mode)
OVOS_REST_PORT=8080

# Factory Identification
FACTORY_NAME="Humanergy Factory"
FACTORY_ID=humanergy_001

# Logging
LOG_LEVEL=INFO
